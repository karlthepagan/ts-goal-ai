{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "removeComments": true,
    "noResolve": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "sourceMap": true
  },
  "compileOnSave": false,
  "include": [
    "typings/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "libs"
  ]
}
