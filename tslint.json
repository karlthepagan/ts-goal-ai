{
  "extends" : [
    "tslint:recommended"
  ],
  "rules": {
    "forin": false,
    "interface-name": [false],
    "no-console": [false],
    "no-debugger": false,
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "max-line-length": false, // TODO remove
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
